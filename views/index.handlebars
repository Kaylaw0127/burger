
<div class="container">

  <div class="item1">
    
    <h2>Burgers for you to chose from!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="item2">
    <h2>Burgers you have devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="item3">
    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
      </div>

      <div class="form-group">
        <input type="radio" name="devoured" value="1" checked> I already ate this!<br>
        <input type="radio" name="devoured" value="0"> I need to eat this!
      </div>

      <button type="submit">Add burger</button>
    </form>
  </div>
</div>